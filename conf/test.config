/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/microbiome -profile test,<docker/singularity>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '16.GB'
    max_time   = '6.h'

    // Input data
    input  = "${projectDir}/assets/test_data"
    skip_bcl2fastq = true
    barcodes = 'https://raw.githubusercontent.com/jianhong/16S_pipeline/main/assets/barcodes.tsv'
    metadata = 'https://raw.githubusercontent.com/jianhong/16S_pipeline/main/assets/metadata.csv'

    // Genome references
    silva_nr99 = 'https://zenodo.org/record/4587955/files/silva_nr99_v138.1_train_set.fa.gz?download=1'
    silva_tax = 'https://zenodo.org/record/4587955/files/silva_species_assignment_v138.1.fa.gz?download=1'
}
